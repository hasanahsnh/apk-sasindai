<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_dialog"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Atur Alamat"
        android:layout_marginStart="8dp"
        android:textColor="@color/maroon"
        android:fontFamily="@font/poppins_bold"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alamat"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/maroon"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:id="@+id/inputAlamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/frame_selected_item"
                    android:hint="Cth: Jl. xx, RT. xx, No/Blok. xx"
                    android:padding="15dp"
                    android:layout_marginTop="7dp"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="12sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kodepos"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/maroon"
                    android:layout_marginTop="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="7dp">

                    <EditText
                        android:id="@+id/inputKodePos"
                        android:layout_width="194dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_weight="1"
                        android:background="@drawable/frame_selected_item"
                        android:digits="0123456789"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="Kode Pos"
                        android:inputType="number"
                        android:padding="15dp"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/cariDetailKodepos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cari"
                        android:textColor="@color/putih"
                        android:gravity="center"
                        android:padding="15dp"
                        android:background="@drawable/frame_bg_btn_checkout"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="12sp"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"/>

                </LinearLayout>

            </LinearLayout>

            <!-- rincian kode pos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:text="Rincian Kode Pos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/maroon"/>

                <TextView
                    android:id="@+id/rincianInputKodePos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/black"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/frame_selected_item"
                    android:padding="15dp"
                    android:text="Rincian"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <TextView
        android:id="@+id/simpanAlamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/frame_bg_btn_checkout"
        android:text="Simpan Alamat"
        android:textColor="@color/putih"
        android:padding="15dp"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:gravity="center"
        android:fontFamily="@font/poppins_medium"/>

</LinearLayout>