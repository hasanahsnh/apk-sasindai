<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lihatProduk"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="10dp"
    android:background="@drawable/frame_produk">

    <!-- Gambar -->
    <ImageView
        android:id="@+id/imgListProdukPreview"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="8dp"
        android:scaleType="centerCrop" />

    <!-- Bagian tengah: nama + harga -->
    <LinearLayout
        android:id="@+id/layoutItem_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp">

        <TextView
            android:id="@+id/tvNamaProdukPreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="Nama Produk"
            android:textColor="@color/maroon"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvHargaProdukPreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp 35.000"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/black" />
    </LinearLayout>

    <!-- Bagian terbawah -->
    <LinearLayout
        android:id="@+id/layoutItem_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="6dp"
        android:gravity="bottom">

        <TextView
            android:id="@+id/tvTotalProdukTerjualPreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="12sp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvProdukTerjual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terjual"
            android:textSize="12sp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/black"
            android:layout_marginStart="4dp" />
    </LinearLayout>

</LinearLayout>
