<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.AkunFragment"
    android:background="@color/putih">

    <ProgressBar
        android:id="@+id/progressBarAkunFragment"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"/>

    <ScrollView
        android:id="@+id/uiFragmentAkun"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <!-- Contents -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Profile Overview -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutProfileOverview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:id="@+id/layoutVerifikasiEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/maroon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:padding="14dp">

                    <TextView
                        android:id="@+id/emailBelumTerverifikasi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="E-Mail Belum Diverifikasi"
                        android:textColor="@color/putih"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginTop="9dp"
                        android:layout_marginStart="6dp"
                        android:src="@drawable/img_caution"/>

                    <TextView
                        android:id="@+id/kirimEmailVerifikasi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Kirim E-Mail Verifikasi"
                        android:textColor="@color/putih"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="50dp"
                    android:paddingBottom="50dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <TextView
                        android:id="@+id/tvSelamatDatang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="36dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Selamat Datang"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/emailTerverifikasi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="E-Mail"
                            android:textColor="@color/abu_gelap"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/imgEmailChecked"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_marginTop="9dp"
                            android:layout_marginStart="6dp"
                            android:src="@drawable/img_verified"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Transaksi -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <GridLayout
                    android:id="@+id/gridLayoutFitur"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:layout_margin="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <!-- Sejarah -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_columnWeight="1"
                        android:gravity="start|center_horizontal"
                        android:background="@drawable/frame_bg_fitur"
                        android:padding="6dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:src="@drawable/img_video"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Sejarah Sasirangan"
                                android:textAlignment="center"
                                android:fontFamily="@font/poppins_medium"
                                android:textColor="@color/maroon"
                                android:textSize="9sp"
                                android:maxLines="2"/>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Ka Pasaran -->
                    <LinearLayout
                        android:id="@+id/layoutFiturKaPasaran"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_columnWeight="1"
                        android:gravity="start|center_horizontal"
                        android:background="@drawable/frame_bg_fitur"
                        android:layout_marginStart="6dp"
                        android:padding="6dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:src="@drawable/img_belanja"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Ka Pasaran"
                                android:textAlignment="center"
                                android:fontFamily="@font/poppins_medium"
                                android:textColor="@color/maroon"
                                android:textSize="9sp"
                                android:maxLines="2"/>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Keranjang -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_columnWeight="1"
                        android:gravity="start|center_horizontal"
                        android:background="@drawable/frame_bg_fitur"
                        android:layout_marginStart="6dp"
                        android:padding="6dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:src="@drawable/img_keranjang"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Keranjang"
                                android:textAlignment="center"
                                android:fontFamily="@font/poppins_medium"
                                android:textColor="@color/maroon"
                                android:textSize="9sp"
                                android:maxLines="2"/>

                        </LinearLayout>

                    </LinearLayout>

                </GridLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Setting -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp">

                <Button
                    android:id="@+id/btnMasuk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Masuk"
                    android:textColor="@color/putih"
                    android:fontFamily="@font/poppins_bold"
                    android:backgroundTint="@color/maroon"
                    android:layout_gravity="center"/>

                <Button
                    android:id="@+id/btnKeluar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keluar"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_bold"
                    android:backgroundTint="@color/gold"
                    android:layout_gravity="center"/>

                <Button
                    android:id="@+id/btnSemuaFitur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Akses Semua Fitur"
                    android:textColor="@color/putih"
                    android:fontFamily="@font/poppins_bold"
                    android:backgroundTint="@color/hijau"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>