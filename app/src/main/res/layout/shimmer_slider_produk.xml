<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="2dp"
    android:background="@drawable/frame_produk">

    <!-- Img Produk -->
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imgListProdukPreview"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:scaleType="centerCrop"
        android:background="@color/abu_terang"
        app:riv_corner_radius="16dp"/>

    <!-- Linear Layout 1 -->
    <LinearLayout
        android:id="@+id/layoutItem_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="6dp">

        <!-- Nama Produk -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:background="@color/abu_terang"
            android:textColor="@color/maroon"
            android:textSize="12sp" />

    </LinearLayout>
    <!-- End linear layout 1 -->

    <!-- Linear Layout 2 -->
    <LinearLayout
        android:id="@+id/layoutItem_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:background="@color/abu_terang">

        <!-- Total terjual -->
        <TextView
            android:id="@+id/tvTotalProdukTerjualPreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/black"/>

    </LinearLayout>
    <!-- End linear layout 2 -->

</LinearLayout>